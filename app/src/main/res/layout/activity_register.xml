<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#0D0BBED6"
    tools:context=".User.RegisterActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_register">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="ลงทะเบียนแล้ว?    "
            android:textColor="#E4635C5C" />

        <TextView
            android:id="@+id/textview_login"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:text="ลงชื่อเข้าใช้"
            android:textColor="#F44336"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <EditText
        android:id="@+id/edittext_cnf_password"
        android:layout_width="229dp"
        android:layout_height="35dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        android:drawableLeft="@mipmap/password"
        android:hint="  ยืนยันรหัสผ่าน"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_password" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="318dp"
        android:layout_height="164dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ahead" />


    <EditText
        android:id="@+id/edittext_password"
        android:layout_width="230dp"
        android:layout_height="34dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        android:drawableLeft="@mipmap/password"
        android:hint="  รหัสผ่าน"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_username" />


    <Button
        android:id="@+id/button_register"
        android:layout_width="238dp"
        android:layout_height="44dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:text="ลงทะเบียน"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_cnf_password" />

    <EditText
        android:id="@+id/edittext_username"
        android:layout_width="231dp"
        android:layout_height="37dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="12dp"
        android:background="#ffffff"
        android:drawableLeft="@mipmap/username"
        android:hint="  ชื่อผู้ใช้"
        android:paddingLeft="2dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />


    <TextView
        android:id="@+id/textView14"
        android:layout_width="266dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@mipmap/plus"
        android:text=" ลงทะเบียน"
        android:textColor="#5E3535"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />



</android.support.constraint.ConstraintLayout>
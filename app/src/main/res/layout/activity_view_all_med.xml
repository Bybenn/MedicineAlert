<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0BBED6"
    tools:context=".AllMedicine.ViewAllMedActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nameMed"
                android:layout_width="177dp"
                android:layout_height="32dp"
                android:layout_marginStart="71dp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="  ชื่อยา" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:layout_marginTop="12dp"
                android:text="สรรพคุณของยา"
                android:textColor="#86110B"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageMed" />

            <Button
                android:id="@+id/noAlertButton"
                android:layout_width="263dp"
                android:layout_height="37dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="7dp"
                android:background="@color/colorPrimary"
                android:text="ไม่ล่ะ , ขอบคุณ"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/getAlertButton" />

            <Button
                android:id="@+id/getAlertButton"
                android:layout_width="261dp"
                android:layout_height="42dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="17dp"
                android:background="@color/colorPrimary"
                android:text="บันทึกไว้ในยาของคุณ"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout6" />

            <ImageView
                android:id="@+id/imageMed"
                android:layout_width="138dp"
                android:layout_height="145dp"
                android:layout_marginStart="93dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameMed"
                tools:srcCompat="@tools:sample/avatars[0]" />
                <!--app:srcCompat="@mipmap/drugs" -->


            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_marginTop="24dp"
                android:text="เวลาที่แนะนำสำหรับคุณ"
                android:textColor="#86110B"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout5" />

            <FrameLayout
                android:id="@+id/frameLayout4"
                android:layout_width="265dp"
                android:layout_height="90dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/infoMed"
                            android:layout_width="277dp"
                            android:layout_height="158dp"
                            android:layout_marginStart="5dp"
                            android:background="#51FFFFFF"
                            android:textAlignment="viewStart"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="info med" />
                    </android.support.constraint.ConstraintLayout>
                </ScrollView>

            </FrameLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="16dp"
                android:text="วิธีใช้ของยา"
                android:textColor="#86110B"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout4" />

            <FrameLayout
                android:id="@+id/frameLayout5"
                android:layout_width="261dp"
                android:layout_height="91dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="132dp">

                        <TextView
                            android:id="@+id/useMed"
                            android:layout_width="260dp"
                            android:layout_height="222dp"
                            android:layout_marginStart="5dp"
                            android:background="#75FFFFFF"
                            android:textAlignment="viewStart"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="how to" />
                    </android.support.constraint.ConstraintLayout>
                </ScrollView>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout6"
                android:layout_width="260dp"
                android:layout_height="86dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="17dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/suggestTime"
                            android:layout_width="261dp"
                            android:layout_height="144dp"
                            android:layout_marginStart="5dp"
                            android:background="#51FFFFFF"
                            android:text="TextView"
                            android:textAlignment="viewStart"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>
                </ScrollView>
            </FrameLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/blurr"
    tools:context=".AllMedicine.ViewAllMedActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/getAlertButton"
                android:layout_width="288dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="17dp"
                android:background="@color/colorPrimary"
                android:text="บันทึกไว้ในคลังยาของคุณ"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout5" />

            <Button
                android:id="@+id/noAlertButton"
                android:layout_width="288dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:background="@color/colorPrimary"
                android:text="ไม่ล่ะ , ขอบคุณ"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/getAlertButton" />

            <FrameLayout
                android:id="@+id/frameLayout5"
                android:layout_width="293dp"
                android:layout_height="520dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="#EBFFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="294dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/nameMed"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="ชื่อยา" />

                    <ImageView
                        android:id="@+id/imageMed"
                        android:layout_width="0dp"
                        android:layout_height="124dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nameMed"
                        tools:srcCompat="@tools:sample/avatars[0]" />

                    <TextView
                        android:id="@+id/infoMed"
                        android:layout_width="262dp"
                        android:layout_height="132dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="196dp"
                        android:textAlignment="viewStart"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="info med" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="วิธีใช้ของยา"
                        android:textColor="#86110B"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/infoMed" />

                    <TextView
                        android:id="@+id/useMed"
                        android:layout_width="262dp"
                        android:layout_height="164dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="352dp"
                        android:textAlignment="viewStart"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="how to" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="12dp"
                        android:text="สรรพคุณของยา"
                        android:textColor="#86110B"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageMed" />
                </android.support.constraint.ConstraintLayout>
            </FrameLayout>

            <!--app:srcCompat="@mipmap/drugs" -->


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
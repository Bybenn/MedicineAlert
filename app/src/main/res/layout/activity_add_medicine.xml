<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0BBED6"
    tools:context=".YourMedicine.AddMedicineActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/addnew_editText"
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:layout_marginStart="12dp"

                android:background="#51FFFFFF"
                android:ems="10"
                android:hint="ชื่อยา"
                android:inputType="textPersonName"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/imageUpMed"
                app:layout_constraintTop_toBottomOf="@+id/nameMed" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="215dp"
                android:layout_height="31dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="ข้อมูลยาของคุณ"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageUpMed" />

            <EditText
                android:id="@+id/noteText"
                android:layout_width="280dp"
                android:layout_height="113dp"
                android:layout_marginStart="24dp"
                android:background="#51FFFFFF"
                android:ems="10"
                android:hint="ใส่ข้อมูลยาของคุณตรงนี้"
                android:inputType="textMultiLine"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textAlignment="center"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/nameMed"
                android:layout_width="181dp"
                android:layout_height="41dp"

                android:layout_marginStart="12dp"
                android:layout_marginTop="52dp"
                android:text="ชื่อยา"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageUpMed"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <Button
                android:id="@+id/addnew_button"
                android:layout_width="288dp"
                android:layout_height="39dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:background="@color/colorPrimary"
                android:text="ตกลง"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/noteText" />

            <ImageView
                android:id="@+id/imageUpMed"
                android:layout_width="120dp"
                android:layout_height="165dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:srcCompat="@mipmap/healthcare" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="312dp"
                android:layout_height="42dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="เพิ่มข้อมูลยาของคุณ"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_setEatTime"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/next"
                android:layout_width="44dp"
                android:layout_height="24dp"

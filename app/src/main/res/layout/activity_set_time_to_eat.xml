            <ImageView
                android:id="@+id/edittext_morning"
                android:layout_width="96dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="140dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/donut" />
                <!--app:srcCompat="@mipmap/timer2" -->


            <TextView
                android:id="@+id/textViewMorn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginTop="180dp"
                android:text="00:00"
                app:layout_constraintStart_toEndOf="@+id/edittext_morning"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/edittext_afternoon"
                android:layout_width="99dp"
                android:layout_height="89dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edittext_morning"
                app:srcCompat="@mipmap/fish" />
                <!--app:srcCompat="@mipmap/timer1" -->
                />

            <ImageView
                android:id="@+id/edittext_evening"
                android:layout_width="90dp"
                android:layout_height="73dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="56dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edittext_afternoon"
                app:srcCompat="@mipmap/pizza" />
                <!--app:srcCompat="@mipmap/timer3" -->
                />

            <TextView
                android:id="@+id/textViewAfter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="16dp"
                android:text="00:00"
                app:layout_constraintStart_toEndOf="@+id/edittext_afternoon"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView

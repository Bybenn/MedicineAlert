                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/button_setEatTime"
                app:layout_constraintVertical_bias="0.0" />

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="209dp"
                android:layout_height="90dp"
                android:layout_marginStart="31dp"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="64dp"
                android:background="#6FFFFFFF"
                app:layout_constraintBottom_toTopOf="@+id/textView13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/edittext_afternoon"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
                tools:ignore="DuplicateIds" />

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="212dp"
                android:layout_height="82dp"
                android:layout_marginTop="53dp"

                android:layout_marginEnd="52dp"
                android:layout_marginBottom="46dp"
                android:background="#6FFFFFFF"
                app:layout_constraintBottom_toTopOf="@+id/frameLayout1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <Button
                android:id="@+id/button_setEatTime"
                android:layout_width="206dp"
                android:layout_height="40dp"
                android:layout_marginStart="112dp"
                android:layout_marginTop="48dp"
                android:background="#04ea00"
                android:text="ตกลง"
                android:textColor="#ffffff"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edittext_evening" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginStart="116dp"
                android:layout_marginTop="44dp"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView11"

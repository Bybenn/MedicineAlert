<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/blurr"
    tools:context=".Alarm.EditTimeActivity">

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="292dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:text="ลบเวลาการทานยานี้"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTime" />

    <!--app:srcCompat="@mipmap/doc" -->

    <Button
        android:id="@+id/editTime"
        android:layout_width="292dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorPrimary"
        android:text="แก้ไขเวลาการทานยา"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout4" />

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="298dp"
        android:layout_height="415dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#F8FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="48dp"
                android:text="ชื่อยาของคุณ"
                android:textColor="@color/design_default_color_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="301dp"
                android:layout_height="42dp"
                android:layout_marginTop="16dp"
                android:text="แก้ไขเวลาทานยาของคุณ"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameMed"
                android:layout_width="142dp"
                android:layout_height="35dp"
                android:background="#51FFFFFF"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_primary"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/timeImage"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/noteText"
                android:layout_width="286dp"
                android:layout_height="38dp"
                android:layout_marginTop="8dp"
                android:background="#51FFFFFF"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="139dp"
                android:layout_height="33dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="172dp"
                android:text="บันทึกช่วยจำ "

                android:textAlignment="center"
                android:textColor="@color/design_default_color_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <ImageView
                android:id="@+id/timeImage"
                android:layout_width="136dp"
                android:layout_height="169dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:srcCompat="@mipmap/clock" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="214dp"
                android:layout_height="29dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="12dp"
                android:text="เวลาในการทานยาของคุณ : "
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeImage" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="76dp"
                android:layout_height="32dp"
                android:layout_marginTop="90dp"
                android:background="#51FFFFFF"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView20"
                app:layout_constraintTop_toBottomOf="@+id/nameMed" />
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
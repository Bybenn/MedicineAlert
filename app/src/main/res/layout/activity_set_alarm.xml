                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/selectAlarm4"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="3"
                        android:text="เลือกเวลาตั้งเวลา"
                        android:textAlignment="center"
                        android:textColor="#F44336"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/showAlarm4"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:text="not selected"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/selectAlarm5"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="3"
                        android:text="เลือกเวลาตั้งเวลา"
                        android:textAlignment="center"
                        android:textColor="#F44336"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/showAlarm5"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:text="not selected"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:text="บันทึกช่วยจำ"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/noteText"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="8dp"
                android:background="#51FFFFFF"
                android:ems="10"
                android:hint="ใส่บันทึกช่วยจำ"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textAlignment="center" />

            <Button
                android:id="@+id/addnew_button"
                android:layout_width="312dp"
                android:layout_height="45dp"
                android:layout_marginTop="40sp"
                android:background="@color/colorPrimary"
                android:text="ตกลง"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteY="586dp" />

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>